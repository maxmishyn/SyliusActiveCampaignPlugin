<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="webgriffe.sylius_active_campaign_plugin.message_handler.contact_create"
                 class="Webgriffe\SyliusActiveCampaignPlugin\MessageHandler\ContactCreateHandler">
            <argument type="service" id="webgriffe.sylius_active_campaign_plugin.mapper.contact"/>
            <argument type="service" id="webgriffe.sylius_active_campaign_plugin.client.active_campaign"/>
            <argument type="service" id="sylius.repository.customer"/>
            <tag name="messenger.message_handler"/>
        </service>

        <service id="webgriffe.sylius_active_campaign_plugin.factory.active_campaign_contact"
                 class="Webgriffe\SyliusActiveCampaignPlugin\Factory\ActiveCampaignContactFactory"/>

        <service id="webgriffe.sylius_active_campaign_plugin.mapper.contact"
                 class="Webgriffe\SyliusActiveCampaignPlugin\Mapper\ContactMapper">
            <argument type="service" id="webgriffe.sylius_active_campaign_plugin.factory.active_campaign_contact"/>
        </service>

        <service id="webgriffe.sylius_active_campaign_plugin.client.active_campaign"
                 class="Webgriffe\SyliusActiveCampaignPlugin\Client\ActiveCampaignClient">
            <argument type="service" id="sylius.http_client"/>
            <argument type="service" id="sylius.http_message_factory"/>
            <argument>%webgriffe_sylius_active_campaign.api_client.base_url%</argument>
            <argument>%webgriffe_sylius_active_campaign.api_client.key%</argument>
        </service>

        <service id="webgriffe.sylius_active_campaign_plugin.event_subscriber.customer"
                 class="Webgriffe\SyliusActiveCampaignPlugin\EventSubscriber\CustomerSubscriber">
            <argument type="service" id="messenger.default_bus"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
